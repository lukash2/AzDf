{
	"name": "df_aggregate_item",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "aggregate2_sql",
						"type": "DatasetReference"
					},
					"name": "Details"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "adf_aggregate0",
						"type": "DatasetReference"
					},
					"name": "Aggregate0"
				}
			],
			"transformations": [
				{
					"name": "Sum"
				},
				{
					"name": "DetailsJoinSum"
				}
			],
			"scriptLines": [
				"source(output(",
				"          fact_id as short,",
				"          date_sold as date,",
				"          product as string,",
				"          color as string,",
				"          amount as float",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> Details",
				"Details aggregate(groupBy(product),",
				"     amount = sum(amount)) ~> Sum",
				"Sum, Details join(Sum@product == Details@product,",
				"     joinType:'inner',",
				"     broadcast: 'auto')~> DetailsJoinSum",
				"Sum sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> Aggregate0"
			]
		}
	}
}